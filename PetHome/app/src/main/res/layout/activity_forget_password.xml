<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgetPassword">

    <RelativeLayout
        android:id="@+id/email_lay_forgot"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/input_shape">

        <EditText
            android:id="@+id/email_text_login_forgot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="12dp"
            android:background="@null"
            android:backgroundTint="@null"
            android:drawableStart="@drawable/ic_email"
            android:drawablePadding="12dp"
            android:drawableTint="@color/iconTint"
            android:fontFamily="@font/futura_round"
            android:hint="@string/email"
            android:inputType="textEmailAddress" />


    </RelativeLayout>

    <Button
        android:fontFamily="@font/futura_round"
        android:id="@+id/forgot_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_lay_forgot"
        android:layout_centerHorizontal="true"
        android:text="@string/send_reset_link" />


</RelativeLayout>