<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.petHomeApps.petHome.fragments.DecoFragment">



    <TextView
        android:id="@+id/header_party"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="30dp"
        android:elevation="2dp"
        android:fontFamily="@font/futura_round"
        android:text="Party Decors"
        android:textSize="23sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/header_party_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_party"
        android:layout_marginStart="12dp"
        android:layout_marginTop="5dp"
        android:elevation="2dp"
        android:fontFamily="@font/futura_round"
        android:text="@string/order_just_two_clicks_away"
        android:textSize="15sp" />



    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:clipToPadding="false"
        android:foregroundGravity="center"
        android:overScrollMode="never"/>



</RelativeLayout>