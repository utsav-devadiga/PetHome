<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginBottom="20dp"
        android:id="@+id/user_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@drawable/ic_user" />

    </RelativeLayout>


    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_image"
        android:orientation="horizontal"
        android:weightSum="2">

        <RelativeLayout

            android:id="@+id/user_firstname_layout"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:background="@drawable/input_shape">

            <EditText
                android:id="@+id/user_first_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:background="@null"
                android:backgroundTint="@null"
                android:drawableStart="@drawable/ic_user"
                android:drawablePadding="12dp"
                android:drawableTint="@color/iconTint"
                android:fontFamily="@font/futura_round"
                android:hint="@string/firstname"
                android:inputType="textPersonName" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/user_last_name_lay"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/input_shape">

            <EditText
                android:id="@+id/user_last_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:background="@null"
                android:drawableStart="@drawable/ic_user"
                android:drawablePadding="12dp"
                android:drawableTint="@color/iconTint"
                android:fontFamily="@font/futura_round"
                android:hint="@string/last_name"
                android:inputType="textPersonName"
                android:textColor="?attr/colorOnBackground" />


        </RelativeLayout>

    </LinearLayout>





    <RelativeLayout
        android:layout_below="@+id/profile_name"
        android:padding="10dp"
        android:id="@+id/user_profile_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/user_profile_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/input_shape"
            android:drawableStart="@drawable/ic_email"
            android:drawablePadding="12dp"
            android:drawableTint="@color/iconTint"
            android:fontFamily="@font/futura_round"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:padding="12dp">
        </EditText>

        <EditText
            android:id="@+id/user_profile_password"
            android:layout_below="@+id/user_profile_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/input_shape"
            android:drawableStart="@drawable/ic_pass_key"
            android:drawablePadding="12dp"
            android:drawableTint="@color/iconTint"
            android:fontFamily="@font/futura_round"
            android:hint="@string/password"
            android:inputType="textEmailAddress"
            android:padding="12dp">

        </EditText>



        <EditText
            android:layout_below="@+id/user_profile_password"
            android:layout_width="match_parent"
            android:id="@+id/user_profile_mobile_no"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/input_shape"
            android:drawableStart="@drawable/ic_number"
            android:drawablePadding="12dp"
            android:drawableTint="@color/iconTint"
            android:fontFamily="@font/futura_round"
            android:hint="@string/mobile_number"
            android:inputType="textEmailAddress"
            android:padding="12dp">

        </EditText>

        <Button
            android:text="Save"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </Button>



    </RelativeLayout>


    </RelativeLayout>












