<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pet_cardview"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="270dp"
    android:layout_height="270dp"
    app:cardCornerRadius="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="12dp">

        <ImageView
            android:id="@+id/pet_image_item"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_dog" />

        <TextView
            android:textStyle="bold"
            android:textSize="25sp"
            android:fontFamily="@font/futura_round"
            android:id="@+id/pet_name_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pet_image_item"
            android:layout_marginTop="10dp"
            android:layout_toStartOf="@id/pet_gender_item"
            android:text="NAME" />

        <ImageView
            android:id="@+id/pet_gender_item"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/pet_image_item"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="12dp"
            android:padding="3dp"
            android:src="@drawable/ic_dog" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pet_gender_item"
            android:orientation="horizontal">


            <TextView
                android:fontFamily="@font/futura_round"
                android:id="@+id/pet_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" />

        </LinearLayout>


    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>